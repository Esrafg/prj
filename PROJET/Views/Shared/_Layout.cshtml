<!DOCTYPE html>
<html lang="en">
<head>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap01.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP3_Identity.styles.css" asp-append-version="true" />
</head>
<body style="background-color:#eaece5">

    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-4" >      
            <div class="container-fluid">
                <a class="navbar-brand" href="#" > <img src="~/images/best-seller.png" style="width:50px ; height:55px"/>  YOUR BEST CORNER</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1" style=" font-size:21px">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListRoles">Administration</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fournisseur" asp-action="Index">Fournisseur</a>
                        </li> <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorie" asp-action="Index">Categorie</a>
                        </li> <li class="nav-item">
